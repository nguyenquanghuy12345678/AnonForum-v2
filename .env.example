# Server Configuration
NODE_ENV=production
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=https://your-domain.com

# Database
MONGODB_URI=mongodb://localhost:27017/anonforum
# Alternative cloud MongoDB
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/anonforum

# Security Keys (IMPORTANT: Generate your own!)
ENCRYPTION_KEY=your-32-character-hex-encryption-key-here
IP_SALT=your-unique-salt-for-ip-hashing-2024

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
POST_RATE_LIMIT=5
COMMENT_RATE_LIMIT=10

# Session Settings
SESSION_SECRET=your-session-secret-key-here

# Email Settings (optional, for admin notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ADMIN_EMAIL=admin@your-domain.com

# Cloudflare (optional, for additional protection)
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_API_TOKEN=your-api-token

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Backup Settings
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Content Moderation
ENABLE_PROFANITY_FILTER=true
ENABLE_SPAM_DETECTION=true
AUTO_DELETE_FLAGGED_CONTENT=false

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=300

# Development Only
DEBUG_MODE=false
LOG_LEVEL=info